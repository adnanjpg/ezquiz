generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
}

model Quiz {
  id        Int    @id @default(autoincrement())
  creatorId String
}

model Question {
  id     Int    @id @default(autoincrement())
  text   String
  quizId Int
}

model QuestionAnswer {
  id         Int     @id @default(autoincrement())
  text       String
  iscorrect  Boolean
  questionId Int
}

model QuizSubmission {
  id          Int @id @default(autoincrement())
  quizId      Int
  submitterId Int
}

model QuizSubmissionAnswer {
  id        Int @id @default(autoincrement())
  quizSubId Int
}

model QuizSubmissionAnsSelection {
  id           Int @id @default(autoincrement())
  ansId        Int
  quizSubAnsId Int
}
